# Daňový Poradce Pro - Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Application
# ===================
APP_NAME="Daňový Poradce Pro"
APP_VERSION="0.1.0"
DEBUG=false

# ===================
# Database
# ===================
# SQLite (default)
DATABASE_URL=sqlite:///./data/app.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Optional: Database encryption key (requires pysqlcipher3)
# DATABASE_ENCRYPTION_KEY=your-secret-encryption-key

# ===================
# API Configuration
# ===================
API_PREFIX=/api/v1

# CORS origins (comma-separated or JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ===================
# Claude AI (Anthropic)
# ===================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Model to use (default: claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# ===================
# App Store Connect (Optional)
# ===================
# For iOS developers - get from App Store Connect > Users and Access > Keys
APPSTORE_KEY_ID=
APPSTORE_ISSUER_ID=
APPSTORE_PRIVATE_KEY_PATH=

# ===================
# Memory System
# ===================
MEMORY_DIR=.agent-memory
